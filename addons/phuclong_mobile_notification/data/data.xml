<odoo>
    <data noupdate="1">
        <!-- Add you code here -->
        <record id="mobile_notification_auto_1" model="mobile.notification.auto">
            <field name="type">1</field>
            <field name="title">"Thông báo"</field>
            <field name="message">"Thẻ thành viên của bạn sắp hết hạn trong vòng một tháng nữa, hãy tiếp tục gia hạn và hưởng các hạng mức ưu đãi cùng Phúc Long nào"</field>
        </record>
        <record id="mobile_notification_auto_2" model="mobile.notification.auto">
            <field name="type">2</field>
            <field name="title">"Thông báo"</field>
            <field name="message">"Tăng hạng mức thành viên cùng Phúc Long để được hưởng các ưu đãi tốt hơn nhé bạn"</field>
        </record>
        <record id="mobile_notification_auto_3" model="mobile.notification.auto">
            <field name="type">3</field>
            <field name="number">100</field>
            <field name="title">"Thông báo"</field>
            <field name="message">"Bạn đã tích đủ %s điểm để đổi code! Sử dụng ngay" % object.number</field>
        </record>
        <record id="mobile_notification_auto_4" model="mobile.notification.auto">
            <field name="type">4</field>
            <field name="title">"Thẻ của bạn đã được cập nhật thông tin thành công"</field>
            <field name="upgrade">"Thẻ của bạn đã được lên hạng thành thẻ %s" % record.level_name</field>
            <field name="downgrade">"Thẻ của bạn đã được lên hạng thành thẻ %s" % record.level_name</field>
        </record>
        <record id="mobile_notification_auto_5" model="mobile.notification.auto">
            <field name="type">5</field>
            <field name="title">"Thông báo"</field>
            <field name="message">"Yêu cầu cập nhật thẻ của bạn đã hoàn tất, vui lòng kiểm tra lại"</field>
        </record>
        <record id="mobile_notification_auto_6" model="mobile.notification.auto">
            <field name="type">6</field>
            <field name="title">"Đơn hàng %s" % record.id</field>
            <field name="message">"Đơn hàng của bạn đã bị huỷ"</field>
        </record>
        <record id="mobile_notification_auto_7" model="mobile.notification.auto">
            <field name="type">7</field>
            <field name="interval_type">months</field>
            <field name="title">"Thông báo"</field>
            <field name="message">"Có phải sắp đến sinh nhật của bạn? Phúc Long gửi bạn mã code ưu đãi vào ngày sinh nhật, nhấn vào đây để xem nhé"</field>
        </record>
        <record id="mobile_notification_auto_8" model="mobile.notification.auto">
            <field name="type">8</field>
            <field name="title">"Đơn hàng %s" % record.id</field>
            <field name="message">"Đơn hàng của bạn đã thanh toán thành công"</field>
        </record>
        <record id="mobile_notification_auto_9" model="mobile.notification.auto">
            <field name="type">9</field>
            <field name="interval_type">minutes</field>
            <field name="interval_number">15</field>
            <field name="title">"Đơn hàng %s" % record.id</field>
            <field name="message">"Đơn hàng của bạn chưa thanh toán. Thanh toán ngay"</field>
        </record>
    </data>
