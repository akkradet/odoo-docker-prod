<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="hr_employee_form_inherit_phuclong_pos_base" model="ir.ui.view">
		<field name="name">hr_employee_form_inherit_phuclong_pos_base</field>
		<field name="model">hr.employee</field>
		<field name="inherit_id" ref="hr.view_employee_form" />
		<field name="arch" type="xml">
			<xpath expr="//page[@name='personal_information']/group" position="inside">
                <group string="Employee On Account">
                    <field name="on_acount_amount"/>
                    <field name="payment_pos_order_ref" />
                </group>
            </xpath>
		</field>
	</record>

</odoo>
